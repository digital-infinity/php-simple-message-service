    "require": {
        "doctrine/mongodb-odm": "^2.6",
        "monolog/monolog": "^3.5",
        "psr/container": "^2.0"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "": "Src/"
        }
