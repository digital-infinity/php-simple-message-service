    "require": {
        "monolog/monolog": "3.5",
        "psr/container": "^2.0"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimpleMessageTests\\": "Tests/"
        }
    },
    "authors": [
        {
            "name": "Allan Wilson"
        }
    ],
    "minimum-stability": "stable",
